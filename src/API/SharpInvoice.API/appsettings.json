{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SharpInvoice API"
    }
  },
  "KeyVault": {
    "Endpoint": "https://sharpinvoicesecrets.vault.azure.net/"
  },
  "AppSettings": {
    "SendGrid": {
      "ApiKey": "",
      "FromName": "SharpInvoice Support",
      "FromEmail": "support@sharpinvoice.com",
      "SmtpHost": "smtp.sendgrid.net",
      "SmtpPort": 587,
      "SmtpUsername": "apikey"
    },
    "Jwt": {
      "Key": "",
      "Issuer": "https://localhost:7256",
      "Audience": "https://localhost:7256",
      "ExpiresInMinutes": 60
    },
    "ConnectionStrings": {
      "SqlDbLocal": "Data Source=DESKTOP-QGBOBHB;Initial Catalog=SharpInvoice;Integrated Security=True;Persist Security Info=False;Pooling=False;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True",
      "SqlDbRemote": ""
    },
    "Authentication": {
      "Google": {
        "ClientId": "",
        "ClientSecret": ""
      },
      "Facebook": {
        "AppId": "",
        "AppSecret": ""
      }
    }
  },
  "AllowedHosts": "*"
}
