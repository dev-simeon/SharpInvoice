{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SharpInvoice API"
    }
  },
  "AppSettings": {
    "AppUrl": "http://localhost:5000",
    "ConnectionStrings": {
      "SqlDbLocal": "Data Source=DESKTOP-QGBOBHB;Initial Catalog=SharpInvoice;Integrated Security=True;Persist Security Info=False;Pooling=False;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True",
      "SqlDbRemote": "Server=your-azure-sql.database.windows.net;Database=SharpInvoiceDb;User Id=;Password="
    },
    "Jwt": {
      "Secret": "your-super-secret-key-that-is-long-enough",
      "Issuer": "SharpInvoice",
      "Audience": "SharpInvoice.Users",
      "ExpiryMinutes": 60
    },
    "Smtp": {
      "Host": "smtp.sendgrid.net",
      "Port": 587,
      "Username": "apikey",
      "Password": "YOUR_SENDGRID_API_KEY",
      "FromAddress": "no-reply@sharpinvoice.com",
      "FromName": "SharpInvoice",
      "UseSsl": true
    },
    "Authentication": {
      "Google": {
        "ClientId": "",
        "ClientSecret": ""
      },
      "Facebook": {
        "AppId": "",
        "AppSecret": ""
      }
    },
    "AzureStorage": {
      "ConnectionString": "YOUR_AZURE_STORAGE_CONNECTION_STRING",
      "ContainerName": "invoices"
    }
  }
}
